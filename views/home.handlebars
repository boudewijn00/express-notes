<div class="box">
    <div class="media">
        {{#if note.link_image}}
        <div class="media-left">
            <figure class="image" style="width: 192px; height: 192px;">
                <img src="{{note.link_image}}" alt="{{note.title}}" style="filter: grayscale(1);">
            </figure>
        </div>
        {{/if}}
        <div class="media-content">
            <div class="content is-normal">
                <h1 class="title has-text-primary is-capitalized">{{ note.title }}</h1>
                <p>{{{markdown note.body }}}</p>
            </div>
        </div>
    </div>
</div>

<div class="box">
    <h2 class="title is-4">Recent Notes</h2>
    <hr/>
    {{#if recentNotes}}
        {{#each recentNotes}}
            <div class="block">
                <p class="is-size-5">
                    <a href="/folders/{{this.parent_id}}"><strong>{{this.title}}</strong></a>
                </p>
                <div class="content">
                    {{{markdown (truncateWords this.body 30)}}}
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No recent notes found.</p>
    {{/if}}
</div>
