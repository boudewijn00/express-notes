<div class="block content is-normal">
    <div class="media">
        {{#if this.link_favicon}}
        <div class="media-left" style="display: flex; align-items: center; gap: 0.5em;">
            <img src="{{this.link_favicon}}" alt="" style="height: 1.25em; filter: grayscale(100%);">
            <a aria-label="external link" target="_blank" class="is-underlined" href={{this.body}}>{{this.title}}</a>
        </div>
        {{/if}}
    </div>
    <div class="media-content">
            {{#if this.link_excerpt}}
                <p>{{truncateWords this.link_excerpt 100}}</p>
            {{/if}}
            {{#if this.link_by_line}}
                <p><b>{{this.link_by_line}}</b></p>
            {{/if}}
            {{#if this.tags}}
                <div class="tags" style="margin-top:5px">
                {{#each this.tags}}
                    <span class="tag is-light has-text-primary">{{this}}</span>
                {{/each}}
                </div>
            {{/if}}
        </div>
</div>
