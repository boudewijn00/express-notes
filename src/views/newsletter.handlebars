<div class="box">
    <h1 class="title is-3 has-text-dark">Newsletter Subscription</h1>
    <p class="subtitle">Stay updated with our latest notes and articles</p>
    
    {{#if success}}
    <div class="notification is-success">
        <p>Thank you for subscribing! You'll receive updates based on your preferences.</p>
    </div>
    {{/if}}

    {{#if errors.general}}
    <div class="notification is-danger">
        <p>{{errors.general}}</p>
    </div>
    {{/if}}

    <form method="POST" action="/newsletter" novalidate>
        <div class="field">
            <label class="label">First Name</label>
            <div class="control">
                <input class="input {{#if errors.first_name}}is-danger{{/if}}" 
                       type="text" 
                       name="first_name" 
                       placeholder="John"
                       value="{{formData.first_name}}">
            </div>
            {{#if errors.first_name}}
            <p class="help is-danger">{{errors.first_name}}</p>
            {{/if}}
        </div>

        <div class="field">
            <label class="label">Last Name</label>
            <div class="control">
                <input class="input {{#if errors.last_name}}is-danger{{/if}}" 
                       type="text" 
                       name="last_name" 
                       placeholder="Doe"
                       value="{{formData.last_name}}">
            </div>
            {{#if errors.last_name}}
            <p class="help is-danger">{{errors.last_name}}</p>
            {{/if}}
        </div>

        <div class="field">
            <label class="label">Email</label>
            <div class="control">
                <input class="input {{#if errors.email}}is-danger{{/if}}" 
                       type="email" 
                       name="email" 
                       placeholder="john.doe@example.com"
                       value="{{formData.email}}">
            </div>
            {{#if errors.email}}
            <p class="help is-danger">{{errors.email}}</p>
            {{/if}}
        </div>

        <div class="field">
            <label class="label">Frequency</label>
            <div class="control">
                <div class="select {{#if errors.frequency}}is-danger{{/if}}">
                    <select name="frequency">
                        <option value="weekly" {{#if (isEqual formData.frequency "weekly")}}selected{{else}}{{#unless formData.frequency}}selected{{/unless}}{{/if}}>Weekly</option>
                        <option value="monthly" {{#if (isEqual formData.frequency "monthly")}}selected{{/if}}>Monthly</option>
                    </select>
                </div>
            </div>
            {{#if errors.frequency}}
            <p class="help is-danger">{{errors.frequency}}</p>
            {{/if}}
        </div>

        <div class="field">
            <label class="label">Topics (Optional)</label>
            <div class="control">
                {{#if folders}}
                    {{#each folders}}
                        <label class="checkbox" style="display: block; margin-bottom: 0.5rem;">
                            <input type="checkbox" 
                                   name="topics" 
                                   value="{{this.title}}"
                                   {{#if (isSelected ../formData.topics this.title)}}checked{{/if}}>
                            {{this.title}}
                        </label>
                    {{/each}}
                {{else}}
                    <p class="help">No topics available</p>
                {{/if}}
            </div>
            <p class="help">Select the topics you're interested in</p>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <button class="button is-primary" type="submit">Subscribe</button>
            </div>
            <div class="control">
                <a href="/" class="button is-light">Cancel</a>
            </div>
        </div>
    </form>
</div>
